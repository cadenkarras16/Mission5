@{
    ViewData["Title"] = "Dating Application";
}

@model DateMe.Models.ApplicationResponse

<h1>Fill out Dating Application</h1>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>



        <label asp-for="FirstName">First Name: </label>
        <input asp-for="FirstName" />
        <br /><br />

        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" />
        <br /><br />

        <label asp-for="Age">Age: </label>
        <input asp-for="Age" />
        <br /><br />

        <label asp-for="Phone">Phone #: </label>
        <input asp-for="Phone" />
        <br /><br />

        <label asp-for="MajorID">Major: </label>
        <select asp-for="MajorID">
            <option value="">Select a Major</option>
            @foreach (Major m in ViewBag.Majors)
            {
                <option value="@m.MajorID">@m.MajorName</option>
            }

        </select>
        <br /><br />

        <label asp-for="CreeperStalker">Are you a creeper or a stalker? </label>
        <select asp-for="CreeperStalker">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br /><br />

        <button type="submit">Submit Application</button>
    </form>
</div>